@page "/notRelatedAllBlogs/{UserId:guid}"
<h3>You can see all users in there</h3>

@if (_blogDtos?.Count is not 0)
{
    <table>
        <tr>
            <th>#</th>
            <th>Blog Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Created at</th>
        </tr>
        @{
            int count = 0;
        }

        @foreach (var model in _blogDtos)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@model.Id</td>
                <td>@model.Name</td>
                <td>@model.Description</td>
                <td>@model.CreatedDate.ToString("M/d/yy")</td>
            </tr>
        }
    </table>
}


@code {
    [Parameter]
    public Guid UserId { get; set; }
    List<BlogDto>? _blogDtos = new();
    protected override async Task OnInitializedAsync()
    {
        _blogDtos = await BlogIntegration.GetNotRelatedAllBlogs(userId: UserId);
    }

}
