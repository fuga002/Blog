@page "/all-posts"
@if (_posts == null || _posts.Count == 0)
{
    <p>Loading blogs...</p>
}
else
{
    foreach (var post in _posts)
    {
        <div class="card">
            <h5 class="card-header">@post.AuthorFullName</h5>
            <div class="card-body">
                <h5 class="card-title"><strong>@post.Title</strong></h5>
                <p class="card-text">@post.Content</p>
                <a href="/get-post-by-id/@post.Id" class="btn btn-primary">See Post</a>
            </div>
        </div>
        <br/>
    }
}

@code {

    private List<PostDto>? _posts;

    protected override async Task OnInitializedAsync()
    {
        _posts = await PostIntegration.GetAllPosts();
    }

}
