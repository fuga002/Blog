@page "/api/Users/{userId:guid}"
@using Blog.Common.Models.User
@inject HttpClient client

@if(updateUser is not null)
{
	<form>

		<div class="mb-3">
			<label class="form-label">First Name</label>
			<input type="text" class="form-control" @bind="@updateUser.Firstname" name="FirstName">
		</div>
		<div class="mb-3">
			<label class="form-label">Last Name </label>
			<input type="text" class="form-control" @bind="@updateUser.Lastname" name="LastName">
		</div>
		<div class="mb-3">
			<label class="form-label">Username</label>
			<input type="text" class="form-control" @bind="@updateUser.Username" name="Username">
		</div>
		
		<button class="btn btn-secondary" @onclick="Update">Add User</button>
	</form>
}
@code {
    UpdateUserModel updateUser = new UpdateUserModel();
    [Parameter]
    public Guid userId { get; set; }
    async Task Update() => await client.PutAsJsonAsync($"api/Users/{userId}", updateUser);
}
